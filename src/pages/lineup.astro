<style>
  h1 {
    color: #96e9ff;
  }
  h2 {
    color: #96e9ff;
  }
  h3 {
    color: #96e9ff;
    font-size: 0.9rem;
  }
  .schedule {
    display: flex;
    flex-direction: column;
    gap: 30px;
  }

  .day {
    background-color: #120524;
    padding: 20px;
    border-radius: 8px;
  }

  .day-title {
    color: #96e9ff;
    font-size: 24px;
    margin-bottom: 10px;
  }

  .hours {
    color: #96e9ff;
    margin-bottom: 20px;
    font-weight: bold;
  }

  .content {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 20px;
  }

  .lineup {
    max-width: 70%;
  }

  .image img {
    max-width: 200px;
    border-radius: 8px;
  }

  p {
    margin-bottom: 10px;
    line-height: 1.5;
    color: #ffffff;
  }

  strong {
    font-weight: bold;
    font-size: 18px;
  }
</style>
