---
const { variant = "primary", size = "medium" } = Astro.props;
---

<button data-variant={variant} data-size={size}>
  <slot />
</button>

<style>
  /* primære */
  [data-variant="primary"] {
    background-color: rgb(0, 255, 4);
    color: rgb(18, 5, 36);
  }
  [data-variant="primary"]:hover {
    background-color: rgb(18, 5, 36);
    color: rgb(0, 255, 4);
    border: 4em;
    border-color: rgb(0, 255, 4);
  }

  /* sekundær */
  [data-variant="secondary"] {
    background-color: rgb(18, 5, 36);
    color: rgb(247, 253, 255);
    border: 4em;
    border-color: rgb(0, 255, 4);
  }
  [data-variant="secondary"]:hover {
    background-color: rgb(0, 255, 4);
    color: rgb(18, 5, 36);
  }
</style>